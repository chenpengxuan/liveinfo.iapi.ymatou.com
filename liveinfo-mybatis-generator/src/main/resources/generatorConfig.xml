<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

	<context id="SqlServerTables" targetRuntime="MyBatis3">
		<plugin type="org.mybatis.generator.plugins.ToStringPlugin"></plugin>
		<plugin type="com.ymatou.liveinfo.mybatisgenerator.RenameModelPlugin">
			<property name="prefixes2Remove" value="tb, ymt, pp" />
			<property name="suffix2Append" value="Po" />
		</plugin>

		<plugin
			type="com.ymatou.liveinfo.mybatisgenerator.ForceCreateUpdateTimePlugin">
			<property name="insertTimeColumns" value="CreatedTime,dAddTime" />
			<property name="lastUpdateTimeColumns" value="LastUpdatedTime" />
			<property name="dbCurrentTimeExpr" value="getdate()" />
		</plugin>
		
		<commentGenerator
			type="com.ymatou.liveinfo.mybatisgenerator.DBCommentGenerator">
			<property name="suppressAllComments" value="false" />
		</commentGenerator>


		<jdbcConnection driverClass="net.sourceforge.jtds.jdbc.Driver"
			connectionURL="jdbc:jtds:sqlserver://AppProductRelease-Readonly.db.ymatou.com:1433/AppProductRelease"
			userId="AppProductRelease_Readonly" password="123456">
			<property name="remarksReporting" value="true" />
		</jdbcConnection>

		<javaModelGenerator targetPackage="com.ymatou.liveinfo.infrastructure.db.model"
			targetProject="liveinfo-infrastructure\src\main\java">
			<property name="enableSubPackages" value="false" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<sqlMapGenerator targetPackage="sqlmap.autogenerated"
			targetProject="liveinfo-infrastructure\src\main\resources">
		</sqlMapGenerator>


		<javaClientGenerator type="XMLMAPPER"
			targetPackage="com.ymatou.liveinfo.infrastructure.db.mapper"
			targetProject="liveinfo-infrastructure\src\main\java">
		</javaClientGenerator>
		
		<table tableName="App_Country" domainObjectName="Country">
			<property name="useActualColumnNames" value="true" />
			<columnRenamingRule searchString="^i|^d|^f|^b|^s" replaceString=""></columnRenamingRule>
		</table>
		<table tableName="Ymt_activity" domainObjectName="Activity">
			<property name="useActualColumnNames" value="true" />
			<columnRenamingRule searchString="^i|^d|^f|^b|^s" replaceString=""></columnRenamingRule>
			<ignoreColumn column="dataversion" />
		</table>
	</context>

</generatorConfiguration>
